{
    "name": "Youtube Downloader",
    "version": "1.0.0",
    "manifest_version": 2,
    "description": "Download Youtube videos.",

    "content_scripts": [{
        "matches": ["https://www.youtube.com/*"],
        "js": [
            "main.js"
        ],
        "run_at":"document_end"
    }],
    "background":{
        "scripts":[
            "background.js"
        ],
        "persistent":false
    },
    "browser_action":{
		"default_title":""
	},
    "permissions": [
        "tabs",
        "background"
    ]
}