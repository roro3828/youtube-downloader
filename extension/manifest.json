{
    "name": "Youtube Downloader",
    "version": "1.1.0",
    "manifest_version": 3,
    "description": "Download Youtube videos.",

    "content_scripts": [
        {
            "matches": ["https://www.youtube.com/*"],
            "js": [
                "js/youtube.js"
            ],
            "css":[
                "css/youtube.css"
            ],
            "run_at":"document_end"
        },
        {
            "matches": ["https://music.youtube.com/*"],
            "js": [
                "js/music.js"
            ],
            "run_at":"document_end"
        }
    ],
    "permissions": [
        "tabs"
    ]
}